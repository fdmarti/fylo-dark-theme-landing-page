---
const { urlImg, altImg, title, text } = Astro.props;
---

<section class='icons'>
	<div class='icon'>
		<img src={urlImg} alt={altImg} />
	</div>
	<div class='icons-text'>
		<h3>{title}</h3>
		<p>{text}</p>
	</div>
</section>
<style>
	.icons {
		display: flex;
		flex-direction: column;
		align-items: center;
		max-width: 500px;
		text-align: center;
		margin: 0 auto;
		row-gap: 2rem;
	}

	.icons-text {
		color: var(--white);
	}

	.icons-text h3 {
		font-size: 28px;
		margin-bottom: 1rem;
		font-family: var(--fontOpenSans);
	}

	.icons-text p {
		font-size: 18px;
		font-family: var(--fontOpenSans);
	}
</style>
