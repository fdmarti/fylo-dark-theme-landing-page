---
import { Icon } from 'astro-icon';
---

<section class='icons'>
    <a href='https://github.com/fdmarti' target='_blank'>
        <Icon pack='ri' name='github-fill' />
    </a>
    <a href='https://www.linkedin.com/in/fededmartinez/' target='_blank'>
        <Icon pack='mdi' name='linkedin' />
    </a>
    <a href='https://www.instagram.com/fedeeemartinez/' target='_blank'>
        <Icon pack='mdi' name='instagram' />
    </a>
</section>
<style>
    .icons {
        max-height: 55px;
        display: flex;
        justify-content: flex-start;
        flex-direction: column;
        gap: 2rem;
    }

    a {
        width: 50px;
        height: 50px;
        color: var(--white);

        display: flex;
        justify-content: center;

        border-radius: 50%;
    }

    svg {
        width: 35px;
    }

    @media (max-width: 992px) {
        .icons {
            gap: 1.5rem;
            flex-direction: row;
            margin: 20px auto 0;
        }

        a {
            margin: 0;
        }
    }
</style>
