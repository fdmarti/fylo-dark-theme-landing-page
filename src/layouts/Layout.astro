---
import Navbar from '../components/Navbar.astro';

export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang='en'>
	<head>
		<meta charset='UTF-8' />
		<meta name='description' content='Astro description' />
		<meta name='viewport' content='width=device-width' />
		<link rel='icon' type='image/svg+xml' href='/images/favicon-32x32.png' />

		<link rel='preconnect' href='https://fonts.googleapis.com' />
		<link rel='preconnect' href='https://fonts.gstatic.com' crossorigin />
		<link
			href='https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;700&family=Raleway:wght@400;700&display=swap'
			rel='stylesheet'
		/>
		<meta name='generator' content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<Navbar />
		<slot />
	</body>
</html>
<style is:global>
	:root {
		--darkBlueText: hsl(217, 28%, 15%);
		--darkBlueBackgroundMain: hsl(218, 28%, 13%);
		--darkBlueFooter: hsl(216, 53%, 9%);
		--darkBlueTestimonial: hsl(219, 30%, 18%);

		--cyan: #65e2d9;
		--cyanHover: #73f1e9;
		--blue: #339ecc;
		--lightRed: hsl(0, 100%, 63%);
		--grey: #bbbbbb;
		--white: #fff;

		--fontOpenSans: 'Open Sans', sans-serif;
		--fontRaleWay: 'Raleway', sans-serif;
	}

	html {
		scroll-behavior: smooth;
		background-color: var(--darkBlueTestimonial);
	}

	body {
		background: url('/images/bg-curvy-desktop.svg') no-repeat bottom/cover;
	}

	img {
		width: 100%;
	}

	* {
		margin: 0;
		padding: 0;
		font-family: var(--fontRaleWay);
	}
	p {
		font-size: 14px;
	}

	a {
		text-decoration: none;
	}

	li {
		list-style: none;
	}
</style>
